<body>

<h1>{{uname}}</h1>
<h1>{{course}}</h1>

<br>
<input type="Submit" value="Add New Project" name="newAdd" id="newAdd"/>

<select id="sort">
  <option value="0" selected>Latest Inputed</option>    
  <option value="1">Alphabetical</option>
  <option value="2">Reverse Alphabetical</option>
  <option value="3">Earliest Due Date</option>
  <option value="4">Lastest Due Date</option>
</select>
<br>
 
 <input type="Submit" value="Show Only Completed" name="showCompleted" id="showCompleted"/>
 <br>

<hr>
<table id = "modules" border="1">
</table>
<hr>

<form action="/log" method="post">
    <input type="Submit" value="Logout" name="Log" id="Log" />
</form>

<input type="Submit" value="Delete Multiple Projects" name="delMul" id="delMul"/>

<div id = "Adding" class="modal-Adding">
    <h1> Add a new Project </h1>
    <div class="close">+</div>
    <div class="form-row">
        <div class="col">
            <label for="Module Name">Module Name</label>
            <input type="text" id="mName" name="mName">
        </div>
        <div class="col">
            <label for="Project Title">Project Title</label>
            <input type="text" id="projectTitle" name="projectTitle">
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label for="noOfMilestones">No. of MileStones</label><br>
            <select name="noOfMilestones" id="noOfMilestones">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div class="col">
            <label for="dueDate">Due Date</label><br>
            <input type="text" id="dueDate" name="dueDate"><br>
        </div>
    </div>
    <br><button class="btn btn-secondary" type:"submit" id="addProject">Add New Project</button>
</div>

<div id = "delMultipleProjets" class="modal-Deleting">
    <h2> Please Select an Option </h2>
        <div class="cancel">+</div>
            <div class="form-row">
                <div class="col">
                    <div class="deleteOptionRadios">
                    <input type="radio" id="CompletedProjects" name="deleteOptions" value="CompletedProjects">
                    <label for="CompletedProjects"> Select if you wish to delete all CompletedProjects</label><br>
                    <input type="radio" id="DeleteAllProjects" name="deleteOptions" value="DeleteAllProjects"> 
                    <label for="DeleteAllProjects"> Select if you wish to delete all projects</label><br>
                    </div>
                </div>
             </div>
             <button class="btn btn-secondary" type:"submit" id="massDeleteBtn">Delete</button>
</div>

<div id="delAllProjects" class="modal-del">
    <h2> Delete Confirmation </h2>
    <div class="close3">+</div>
    <div class="form-row>
    <div class="col">
    <div class="modal-del-contents">
    <p> Are you sure you want to delete all of your projects? <br> If so please enter "Delete" into the input box to proceed </p>
     <input type="text" id="deleteEntry" name="deleteEntry" placeholder="Delete">
      <button class="btn btn-secondary" type:"submit" id="delAllProjectsBtn">Delete</button>
     </div>
     </div>
     </div>
</div>

