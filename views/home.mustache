<script> $( function() {
    $( "#dueDate" ).datepicker({
        dateFormat: "dd/mm/yy",
        changeMonth: true,
        changeYear: true
    });
}); </script>

<script src="add.js"></script>
<script src="sort.js"></script>
<script src="completeModule.js"></script>
